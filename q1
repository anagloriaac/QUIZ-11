#include <iostream>
using namespace std;

float CalculateE (float x) {
int repeat=1;
float d=1, value=0, fac;

  if (x>=1)
  return 2;

while  (d>x){
fac=1;
  for (int i=1;i<repeat;i++) {
    fac=fac*i;
  }

value=value+1/fac;
d=1/fac;
repeat++;

}
return value;
}

int main(){
  float a;

cout <<"Write the accuracy for e: ";
cin>>a;
cout << "The result is: " << CalculateE(a);

return 0;
}
